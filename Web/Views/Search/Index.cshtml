@model List<Web.Models.Product>
@{
    Layout = "ProductListLayout";
    var keyword = ViewBag.Keyword as string;
}


<h3>Kết quả tìm kiếm cho: "@keyword"</h3>

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm nào.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })" style="text-decoration: none; color: inherit;">
                        @if (product.ProductImage != null)
                        {
                            <img src="@product.ProductImage.ImageSrc" class="card-img-top" alt="@product.Title" />
                        }
                        else
                        {
                            <img src="/images/default.jpg" class="card-img-top" alt="No image" />
                        }

                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">
                                Giá: <strong>@product.Price.ToString("N0") VNĐ</strong><br />
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        }

    </div>

}
@{
	ViewBag.BaseUrl = "/Search";
	ViewBag.QueryParams = new Dictionary<string, string> {
		{ "keyword", keyword }
	};
}
@await Html.PartialAsync("Pagination", Model)
